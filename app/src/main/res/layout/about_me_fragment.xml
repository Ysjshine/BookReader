<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOfMyBookShelfCategory">

    <ImageView
        android:id="@+id/about_me_picture"
        android:layout_marginTop="30sp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@mipmap/ad"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/about_me_fragment_username_text"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="left|center"
            android:layout_weight="1"
            android:textSize="20sp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000000"
            android:text="昵称:"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/about_me_fragment_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_weight="2"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/about_me_fragment_edit_nickname_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/border"
            android:text="edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp">
        <Button
            android:id="@+id/about_me_change_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_marginRight="10sp"/>
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/about_me_clear_cache_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:layout_weight="1"
            android:background="@drawable/border" />
    </LinearLayout>

    <Button
        android:id="@+id/about_me_login_out_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="注销登录"
        android:background="@drawable/border"
        android:layout_marginTop="95sp"
        />

    <Button
        android:id="@+id/about_me_developer_team_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="联系我们"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:background="@drawable/border"/>
</LinearLayout>